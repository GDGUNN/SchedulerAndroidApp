<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zobtech.scheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScheduleActivity"
            android:label="Schedules"></activity>
        <activity
            android:name=".AddScheduleActivity"
            android:label="@string/title_activity_add_schedule"
            android:parentActivityName=".ScheduleActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zobtech.scheduler.ScheduleActivity" />
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".ScheduleActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zobtech.scheduler.ScheduleActivity" />
        </activity>

        <provider
            android:name="SchedulerContentProvider"
            android:authorities="com.zobtech.scheduler.contentprovider"></provider>
        <service android:name=".SchedulerService"></service>
    </application>

</manifest>
